APP_ENV=development
APP_DEBUG=true

# Database
# Supported DB_CONNECTION values depend on installed PDO drivers (e.g. sqlite, mysql, pgsql)
DB_CONNECTION=sqlite
DB_DATABASE=database/database.sqlite
DB_HOST=127.0.0.1
DB_PORT=3306
DB_USERNAME=root
DB_PASSWORD=
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci
DB_PREFIX=

# API auth (optional for demo)
# When empty, protected routes bypass API key checks.
API_KEY=

# CORS
CORS_ALLOW_ORIGIN=*
CORS_ALLOW_METHODS="GET, POST, PUT, PATCH, DELETE, OPTIONS"
CORS_ALLOW_HEADERS="Content-Type, Authorization, X-Requested-With, X-API-Key"
